<h1> <%= @store.name %></h1>
<br>
<p> Store Name: <%= @store.name %></p>
<br>
<hr>

<h1>Update This Store</h1>

<form action="/stores/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="category">New Store Name</label>
  <input type="text" name="category">
  <button type="submit" class="btn btn-default">Update Store Name</button>
</form>

<h1>Delete <%= @store.name %></h1>

<form action="/stores/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn btn-danger" type="submit">Delete this Store</button>
</form>
